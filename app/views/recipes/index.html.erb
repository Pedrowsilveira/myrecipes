<%= render 'shared/pages_title', title: 'All Recipes' %>

<% @recipes.each do |recipe| %>
  <div class="row">
    <% if false %>
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for recipe.chef, size: 400 %>
        <h5>Chef name: <%= recipe.chef.chefname %></h5>
      </section>
    </div>
    <% end %>
    <div class="col-lg-8 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>
      <p>
        <span class='quiet'><small> <%= time_ago_in_words(recipe.created_at)%> ago by <%= recipe.chef.chefname %></small></span>
      </p>
    
    </div>
    
  </div>
  <hr/>
  
<% end %>